<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/button_pressed_background" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/button_disabled_background" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/button_selected_background" />
            <corners android:radius="8dp" />
        </shape>
    </item>
    <item> <!-- Default/Unselected within this specific selector (shouldn't be hit if logic is correct) -->
        <shape android:shape="rectangle">
            <solid android:color="@color/button_selected_background" />
            <corners android:radius="8dp" />
        </shape>
    </item>
</selector>