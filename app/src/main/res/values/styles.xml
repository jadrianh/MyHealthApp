<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Estilo base para botones -->
    <style name="Widget.MyHealthApp.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">12dp</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <!-- Estilo para botones con borde -->
    <style name="Widget.MyHealthApp.Button.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">12dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="strokeColor">@color/green</item>
        <item name="strokeWidth">1dp</item>
    </style>
</resources> 