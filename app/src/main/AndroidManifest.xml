<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.damb.myhealthapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACTIVITY_RECOGNITION" />
    <uses-permission android:name="android.permission.BODY_SENSORS" />
    <uses-permission android:name="android.permission.BODY_SENSORS_BACKGROUND" />

    <!-- Permiso para notificaciones en Android 13 (API 33) y superiores -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS"/>

    <application
        android:name=".MyHealthApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyHealthApp"
        tools:targetApi="31">
        <activity
            android:name=".views.WelcomeActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".views.MainActivity"
            android:exported="true">
        </activity>
        <activity
            android:name=".views.LoginActivity"
            android:exported="true">
        </activity>
        <activity
            android:name=".views.RegisterActivity"
            android:exported="true">
        </activity>
        <activity
            android:name=".onboarding.BirthdayProfileActivity"
            android:exported="true">
        </activity>
        <activity
            android:name=".onboarding.GenderProfileActivity"
            android:exported="true">
        </activity>
        <activity
            android:name=".onboarding.HeightProfileActivity"
            android:exported="true">
        </activity>
        <activity
            android:name=".onboarding.WeightProfileActivity"
            android:exported="true">
        </activity>
        <activity
            android:name=".onboarding.ActivityLevelProfileActivity"
            android:exported="true">
        </activity>
        <activity
            android:name=".views.DetalleEjercicioActivity"
            android:exported="true">
        </activity>
        <activity
            android:name=".views.UserProfileActivity"
            android:exported="true">
        </activity>
        <activity android:name=".views.EntrenamientoGuiadoActivity" />
        <activity android:name=".views.ExerciseLogActivity" />
        <activity android:name=".views.SettingsActivity" />

        <!-- Facebook Configuration -->
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@strings/facebook_client_token" />
        <meta-data
            android:name="com.facebook.sdk.ClientToken"
            android:value="@strings/facebook_client_token" />

        <receiver
            android:name=".receivers.NotificationReceiver"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="water_reminder_action" />
                <action android:name="exercise_reminder_action" />
                <action android:name="step_goal_reminder_action" />
            </intent-filter>
        </receiver>

    </application>

</manifest>